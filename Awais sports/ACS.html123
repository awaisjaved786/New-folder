<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>ACS Awais Cricket Shop</title>
  <style>
    body { font-family: Arial, sans-serif; margin:0; background:#f9f9f9; }
    header {
      background:#0b6623; color:#fff; padding:10px 20px;
      display:flex; align-items:center; justify-content:space-between;
    }
    header img { height:50px; }
    nav a {
      color:#fff; margin:0 10px; text-decoration:none; font-weight:bold;
    }
    .banner {
      width:100%; height:300px;
      background: url('https://i.ibb.co/Yc2rT4K/pakistan-cricket-banner.jpg') center/cover no-repeat;
      margin-bottom: 20px;
    }
    .section {
      padding:20px;
      background:#fff;
      margin: 10px 20px;
      border-radius: 8px;
      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }
    .section h2 {
      text-align:center;
      margin-bottom:20px;
      color:#0b6623;
    }
    .qualities {
      display:flex;
      justify-content:center;
      gap:20px;
      flex-wrap: wrap;
    }
    .quality {
      width: 250px;
      border:1px solid #ddd;
      border-radius: 6px;
      padding: 10px;
      text-align:center;
      background:#fafafa;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .quality img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 4px;
    }
    .quality h3 {
      margin:10px 0 5px;
      font-size:18px;
      color:#333;
    }
    .quality p {
      font-weight:bold;
      margin:5px 0 10px;
      color:#0b6623;
      font-size:16px;
    }
    .quality button {
      background:#0b6623;
      color:#fff;
      border:none;
      padding:8px 16px;
      border-radius:4px;
      cursor:pointer;
      font-size:14px;
      transition: background-color 0.3s ease;
    }
    .quality button:hover {
      background:#094a16;
    }
    .cart {
      background:#e8f5e9;
      margin: 20px;
      padding: 20px;
      border-radius: 8px;
      max-width: 600px;
    }
    .cart h2 {
      margin-top: 0;
      color:#0b6623;
      text-align:center;
    }
    .cart ul {
      list-style:none;
      padding:0;
      margin: 0 0 15px 0;
      max-height: 250px;
      overflow-y: auto;
    }
    .cart li {
      padding: 8px 0;
      border-bottom: 1px solid #ccc;
      font-size: 16px;
      color:#333;
      display: flex;
      justify-content: space-between;
    }
    .cart-total {
      font-weight: bold;
      font-size: 18px;
      text-align: right;
      color:#0b6623;
    }
  </style>
</head>
<body>

<header>
  <div><img src="https://i.ibb.co/k5zKnZF/logo.png" alt="ACS Logo" /></div>
  <nav>
    <a href="#">Home</a>
    <a href="#">About Us</a>
    <a href="#">Contact</a>
  </nav>
</header>

<div class="banner"></div>

<div id="products"></div>

<div class="cart">
  <h2>Your Cart</h2>
  <ul id="cart-list"></ul>
  <p class="cart-total">Total: Rs <span id="total-price">0</span></p>
</div>

<script>
  const products = [
    {
      name: "Bat",
      qualities: [
        { name: "Basic Bat", price: 1500, img: "https://i.ibb.co/sF9WkXK/bat.jpg" },
        { name: "Standard Bat", price: 3500, img: "https://i.ibb.co/sF9WkXK/bat.jpg" },
        { name: "Pro Bat", price: 6500, img: "https://i.ibb.co/sF9WkXK/bat.jpg" }
      ]
    },
    {
      name: "Ball",
      qualities: [
        { name: "Tennis Ball", price: 200, img: "https://i.ibb.co/ZB5xkLT/ball.jpg" },
        { name: "Leather Ball", price: 500, img: "https://i.ibb.co/ZB5xkLT/ball.jpg" },
        { name: "Match Ball", price: 900, img: "https://i.ibb.co/ZB5xkLT/ball.jpg" }
      ]
    },
    {
      name: "Gloves",
      qualities: [
        { name: "Training Gloves", price: 1000, img: "https://i.ibb.co/Jzy6LFW/gloves.jpg" },
        { name: "Match Gloves", price: 2000, img: "https://i.ibb.co/Jzy6LFW/gloves.jpg" },
        { name: "Pro Gloves", price: 3000, img: "https://i.ibb.co/Jzy6LFW/gloves.jpg" }
      ]
    },
    {
      name: "Pads",
      qualities: [
        { name: "Basic Pads", price: 1800, img: "https://i.ibb.co/3fsYj3y/pads.jpg" },
        { name: "Standard Pads", price: 2800, img: "https://i.ibb.co/3fsYj3y/pads.jpg" },
        { name: "Pro Pads", price: 4000, img: "https://i.ibb.co/3fsYj3y/pads.jpg" }
      ]
    },
    {
      name: "Helmet",
      qualities: [
        { name: "Basic Helmet", price: 2500, img: "https://i.ibb.co/KsJ4X3L/helmet.jpg" },
        { name: "Standard Helmet", price: 3500, img: "https://i.ibb.co/KsJ4X3L/helmet.jpg" },
        { name: "Pro Helmet", price: 5000, img: "https://i.ibb.co/KsJ4X3L/helmet.jpg" }
      ]
    },
    {
      name: "Chest Guard",
      qualities: [
        { name: "Basic Chest Guard", price: 1000, img: "https://i.ibb.co/qCJ3rns/chestguard.jpg" },
        { name: "Standard Chest Guard", price: 1800, img: "https://i.ibb.co/qCJ3rns/chestguard.jpg" },
        { name: "Pro Chest Guard", price: 2500, img: "https://i.ibb.co/qCJ3rns/chestguard.jpg" }
      ]
    },
    {
      name: "Elbow Guard",
      qualities: [
        { name: "Basic Elbow Guard", price: 700, img: "https://i.ibb.co/kq9twRt/elbow.jpg" },
        { name: "Standard Elbow Guard", price: 1200, img: "https://i.ibb.co/kq9twRt/elbow.jpg" },
        { name: "Pro Elbow Guard", price: 1800, img: "https://i.ibb.co/kq9twRt/elbow.jpg" }
      ]
    },
    {
      name: "Kit Bag",
      qualities: [
        { name: "Small Kit Bag", price: 1500, img: "https://i.ibb.co/ZLgPCJ0/kitbag.jpg" },
        { name: "Medium Kit Bag", price: 2500, img: "https://i.ibb.co/ZLgPCJ0/kitbag.jpg" },
        { name: "Large Kit Bag", price: 4000, img: "https://i.ibb.co/ZLgPCJ0/kitbag.jpg" }
      ]
    },
    {
      name: "Tracksuit",
      qualities: [
        { name: "Training Tracksuit", price: 1800, img: "https://i.ibb.co/N1kpG1B/tracksuit.jpg" },
        { name: "Standard Tracksuit", price: 3000, img: "https://i.ibb.co/N1kpG1B/tracksuit.jpg" },
        { name: "Premium Tracksuit", price: 4500, img: "https://i.ibb.co/N1kpG1B/tracksuit.jpg" }
      ]
    }
  ];

  const productsDiv = document.getElementById('products');
  const cartList = document.getElementById('cart-list');
  const totalPriceEl = document.getElementById('total-price');

  let cart = [];

  function renderProducts() {
    products.forEach(product => {
      const section = document.createElement('div');
      section.classList.add('section');

      const title = document.createElement('h2');
      title.textContent = product.name;
      section.appendChild(title);

      const qualitiesDiv = document.createElement('div');
      qualitiesDiv.classList.add('qualities');

      product.qualities.forEach(quality => {
        const qualityDiv = document.createElement('div');
        qualityDiv.classList.add('quality');

        const img = document.createElement('img');
        img.src = quality.img;
        img.alt = quality.name;
        qualityDiv.appendChild(img);

        const name = document.createElement('h3');
        name.textContent = quality.name;
        qualityDiv.appendChild(name);

        const price = document.createElement('p');
        price.textContent = `Rs ${quality.price}`;
        qualityDiv.appendChild(price);

        const btn = document.createElement('button');
        btn.textContent = "Add to Cart";
        btn.onclick = () => addToCart(quality);
        qualityDiv.appendChild(btn);

        qualitiesDiv.appendChild(qualityDiv);
      });

      section.appendChild(qualitiesDiv);
      productsDiv.appendChild(section);
    });
  }

  function addToCart(product) {
    cart.push(product);
    renderCart();
  }

  function renderCart() {
    cartList.innerHTML = '';
    let total = 0;

    cart.forEach((item, index) => {
      const li = document.createElement('li');
      li.textContent = `${item.name} - Rs ${item.price}`;
      
      // Optional: Add remove button for each cart item
      const removeBtn = document.createElement('button');
      removeBtn.textContent = 'Remove';
      removeBtn.style.marginLeft = '10px';
      removeBtn.style.background = '#cc0000';
      removeBtn.style.color = '#fff';
      removeBtn.style.border = 'none';
      removeBtn.style.borderRadius = '3px';
      removeBtn.style.cursor = 'pointer';
      removeBtn.onclick = () => {
        cart.splice(index, 1);
        renderCart();
      };

      li.appendChild(removeBtn);
      cartList.appendChild(li);

      total += item.price;
    });

    totalPriceEl.textContent = total;
  }

  // Initialize
  renderProducts();
</script>

</body>
</html>
